<?xml version="1.0" encoding="iso-8859-1"?>
<wiidisc version="1">
  <id version="0" disc="0" game="RMC">
    <region type="P"/>

  </id>
  <options>

    <section name="WIIMMFI Patch Through /WIIMMFI Settings">

      <option id="WIIMFI" name="Wiimfi" default="1">
        <choice name="Enabled">
          <patch id="WIM"/>
        </choice>
      </option>

      <option name="StaticR?" default="1">
        <choice name="Enabled">
          <patch id="StaticR"/>
        </choice>
      </option>

      <option name="Copy MKW save to SD card?" default="0">
        <choice name="Enabled">
          <patch id="redirectsave"/>
        </choice>
      </option>

      <option name="'My Stuff' folder" default="1" id="any_alteration">
        <choice name="Enabled">
          <patch id="any_alteration_patch"/>
        </choice>
      </option>

    </section>
  </options>

  <patch id="WIM">
    <folder external="/Wiimmfi/" recursive="false"/>
    <file disc="main.dol" external="/Wiimmfi/main.dol"/>
  </patch>
 
  <patch id="StaticR">
    <folder external="/Wiimmfi/" recursive="false"/>
    <file disc="/rel/StaticR.Rel" external="/Wiimmfi/StaticR.Rel"/>
  </patch>

  <patch id="redirectsave">
    <savegame external="/riivolution/save/{$__gameid}{$__region}" clone="true"/>
  </patch>

  <patch id="any_alteration_patch">
    <folder external="/CTGPR/My Stuff" recursive="false"/>
    <folder disc="/" external="/CTGPR/My Stuff"/>
  </patch>

</wiidisc>